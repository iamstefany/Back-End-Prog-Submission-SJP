    {
      "listen": "test",
      "script": {
        "id": "a29df7d5-2473-4ccd-9ada-347a1a84f8e2",
        "type": "text/javascript",
        "packages": {},
        "requests": {},
        "exec": [
          "var requestPath = pm.request.url.getPath();\r",
          "\r",
          "// Update JWT token on all login requests\r",
          "if (requestPath.toLowerCase() == \"/auth/login\") {\r",
          "    let jsonData = pm.response.json(); \r",
          "    \r",
          "    // Set only if successfull response, set as empty otherwise\r",
          "    if (pm.response.code === 200 && jsonData.accessToken) {\r",
          "        pm.globals.set(\"BearerToken\", `${jsonData.accessToken}`);\r",
          "    } \r",
          "    else {\r",
          "        pm.globals.set(\"BearerToken\", \"\");\r",
          "    }\r",
          "}"
        ]
      }
    }
