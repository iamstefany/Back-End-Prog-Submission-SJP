    {
      "name": "Register as Guest (Ready to Use)",
      "event": [
        {
          "listen": "test",
          "script": {
            "id": "23d9037a-f7e9-4dd2-89b0-073b069bf26a",
            "exec": [
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "prerequest",
          "script": {
            "id": "892da5ed-1f6e-4963-8f2d-21a137f72295",
            "exec": [
              "// Age constraints\r",
              "const MIN_AGE = 18;\r",
              "const MAX_AGE = 60;\r",
              "\r",
              "const today = new Date();\r",
              "\r",
              "// Generate random age between 18 and 60\r",
              "const age = Math.floor(Math.random() * (MAX_AGE - MIN_AGE + 1)) + MIN_AGE;\r",
              "\r",
              "// Generate a random extra offset within the year\r",
              "const extraDays = Math.floor(Math.random() * 365);\r",
              "\r",
              "// Calculate date of birth\r",
              "const dob = new Date(today);\r",
              "dob.setFullYear(today.getFullYear() - age);\r",
              "dob.setDate(dob.getDate() - extraDays);\r",
              "\r",
              "// Format as yyyy-MM-dd\r",
              "const yyyy = dob.getFullYear();\r",
              "const mm = String(dob.getMonth() + 1).padStart(2, '0');\r",
              "const dd = String(dob.getDate()).padStart(2, '0');\r",
              "\r",
              "pm.collectionVariables.set(\"randomDOB\", `${yyyy}-${mm}-${dd}`);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
